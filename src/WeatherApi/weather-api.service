[Unit]
Description=Weather API .NET Web API Application running on Ubuntu 

[Service]
WorkingDirectory=/home/ubuntu/weather-api/
ExecStart=/usr/bin/dotnet /home/ubuntu/weather-api/WeatherApi.dll
Restart=always 
RestartSec=10 
SyslogIdentifier=dotnet-weatherAPI 
User=ubuntu
Environment=ASPNETCORE_ENVIRONMENT=Production

[Install]
WantedBy=multi-user.target